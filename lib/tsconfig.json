{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": "",
    "rootDir": "./",
    "outDir": "../dist",
    "paths": {
      "@angular/core": ["node_modules/@angular/core"],
      "@angular/http": ["node_modules/@angular/http"],
      "rxjs/*": ["node_modules/rxjs/*"]
    },
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "gh-pages",
    "**/*.ngfactory.ts",
    "**/*.shim.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../dist",
    "entryModule": "./hal.module#HalModule",
    "strictMetadataEmit": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "files": [
    "./typings/halfred.d.ts",
    "./index.ts"
  ]
}
